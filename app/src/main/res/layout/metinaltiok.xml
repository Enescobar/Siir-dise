<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgapps"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38sp"
                android:text="Metin Altıok"
                android:id="@+id/txt_ad"
                android:textColor="#FFFFFF"
                />


            <ImageView
                android:src="@drawable/metinbaba"
                android:layout_width="130dp"
                android:layout_height="103dp"
                android:layout_alignParentRight="true"
                />


        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:orientation="horizontal"
            android:rowCount="1">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"

                >

                <Button
                    android:background="@drawable/custom_button"
                    android:text="ACILARLA SORULARA"
                    android:textSize="20dp"
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                </Button>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"

                >

                <Button
                    android:text="BEN ŞİMDİ BİRAZ"
                    android:textSize="20dp"
                    android:id="@+id/btn2"
                    android:background="@drawable/custom_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Button>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"

                >

                <Button
                    android:background="@drawable/custom_button"
                    android:id="@+id/btn3"
                    android:text="BİR YALNIZLIK İŞARETİ"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Button>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"

                >

                <Button
                    android:id="@+id/btn4"
                    android:text="OLSA OLSA"
                    android:textSize="20dp"
                    android:background="@drawable/custom_button"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Button>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"

                >
                <Button
                    android:id="@+id/btn5"
                    android:text="Şimdi GEL"
                    android:background="@drawable/custom_button"

                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Button>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"

                >

                <Button
                    android:id="@+id/btn66"
                    android:text="SEVMİYORUM SENİ"
                    android:textSize="20dp"
                    android:background="@drawable/custom_button"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="DuplicateIds">

                </Button>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"

                >

                <Button
                    android:id="@+id/btn7"
                    android:text="İKİLEM"
                    android:textSize="20dp"
                    android:background="@drawable/custom_button"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Button>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"

                >

                <Button
                    android:id="@+id/btn8"
                    android:text="SEVMEYE BAŞLAYINCA BİRİNİ"
                    android:textSize="20dp"
                    android:background="@drawable/custom_button"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Button>

            </androidx.cardview.widget.CardView>

        </GridLayout>


    </LinearLayout>


</ScrollView>




